    "chai": "^4.3.6",
    "esbuild": "^0.23.1",
    "esbuild-plugin-tsc": "^0.4.0",
    "execa": "^6.1.0",
    "husky": "^8.0.0",
    "jsdom": "^22.0.0",
    "ts-loader": "^9.4.2",
    "typescript": "^4.9.4",
